datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Repo {
    id       String   @id
    owner    String
    repo     String
    branches Branch[]
}

model Branch {
    id      String   @id
    repo    Repo     @relation(fields: [repoId], references: [id])
    repoId  String
    name    String
    commits Commit[]
}

model Commit {
    id       String  @id
    hash     String
    branch   Branch  @relation(fields: [branchId], references: [id])
    branchId String
    entries  Entry[]
}

model Entry {
    id        String   @id
    createdAt DateTime

    zigVersion String
    zlsVersion String

    commit   Commit @relation(fields: [commitId], references: [id])
    commitId String

    group   Group  @relation(fields: [groupId], references: [id])
    groupId String
}

model Group {
    id      String  @id
    summary String
    entries Entry[]
}
